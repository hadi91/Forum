<h2 id="newtopic"> New Topic </h2>

<%= form_for @topic do |f| %>

<p class="topic">
  <%= f.label :topic , :id => "titlehead"%><br>
  <%= f.text_field :title, :class => "title" %>
</p>

<p class="contentbody">
  <%= f.label :content %><br>
  <%= f.text_area :body, :class => "content" %>
</p>

<p class="submit">
  <%= f.submit :Create,:class => "btn btn-primary" %>
  <%= link_to "Cancel", root_path, :type => "button", :class => "btn btn-danger"%>
</p>

<%end%>
